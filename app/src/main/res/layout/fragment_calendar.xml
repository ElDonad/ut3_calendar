<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calendar.CalendarFragment"
    android:id="@+id/mainLayout"
    android:background="?customForegroundColor">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:backgroundTint="?customBackgroundColor"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_background"
        android:backgroundTint="?customBackgroundColor"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.edt.ut3.ui.custom_views.overlay_layout.OverlayBehavior"
        android:id="@+id/front_layout"
        android:background="?customBackgroundColor">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="?customCalendarColor">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:toolbarId="@+id/toolbar">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
                    app:layout_collapseMode="parallax"
                    android:layout_margin="16dp"
                    android:background="@android:color/transparent"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/day_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="?customBackgroundColor">

            <com.elzozor.yoda.Day
                android:id="@+id/day_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:fit="BOUNDS_ADAPTIVE"
                app:displayMode="FIT_TO_CONTAINER"
                app:start="7"
                app:end="20"/>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refresh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="88dp"
            android:backgroundTint="?customCalendarFloatingButtonColor"
            android:src="@drawable/ic_refresh"
            android:elevation="0dp"
            android:tint="?customCalendarFloatingButtonColor"
            app:borderWidth="0dp"
            app:elevation="0dp"
            app:fabSize="normal"
            app:tint="?customCalendarFloatingButtonIconColor" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:elevation="0dp"
            android:src="@drawable/ic_settings"
            app:elevation="0dp"
            android:backgroundTint="?customCalendarFloatingButtonColor"
            android:tint="?customCalendarFloatingButtonColor"
            app:tint="?customCalendarFloatingButtonIconColor"
            app:borderWidth="0dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>