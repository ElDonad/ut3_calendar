<resources>
    <declare-styleable name="SearchBar">
        <attr name="backgroundColor" format="color"/>
        <attr name="placeHolder" format="string"/>
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:colorForeground">@color/foregroundColor</item>
        <item name="calendarColor">@color/colorPrimaryDark</item>
        <item name="calendarFloatingButtonIconColor">@android:color/white</item>
        <item name="calendarFloatingButtonColor">@color/colorAccent</item>
        <item name="mapsFloatingButtonColor">@color/mapsFloatingButtonColor</item>
        <item name="mapsFloatingButtonIconColor">@color/mapsFloatingButtonIconColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="iconTint">@color/textColor</item>
        <item name="android:windowBackground">@color/foregroundColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>


        <item name="chipStyle">@style/Widget.App.Chip</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoTextViewStyle</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Chip</item>
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">@color/textColor</item>
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconTint">@color/iconTint</item>
        <item name="chipBackgroundColor">@color/foregroundColor</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="takePictureStyleDark" parent="CardView">
        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
    </style>

    <style name="takePictureStyleLight" parent="CardView">
        <item name="cardBackgroundColor">#DCDCDC</item>
    </style>
</resources>