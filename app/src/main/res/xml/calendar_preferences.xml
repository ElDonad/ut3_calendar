<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/application">

        <ListPreference
            android:key="theme"
            app:title="@string/theme"
            android:entryValues="@array/themesAlias"
            android:entries="@array/themes"
            android:icon="@drawable/ic_theme"/>

        <PreferenceCategory
            app:title="@string/dark_theme_bounds_title"
            android:icon="@drawable/ic_time">

            <EditTextPreference
                android:key="dark_theme_start"
                app:title="@string/starting_hour"
                android:defaultValue="00:00"/>

            <EditTextPreference
                android:key="dark_theme_end"
                app:title="@string/ending_hour"
                android:defaultValue="00:00"/>

        </PreferenceCategory>


        <SwitchPreference
            android:key="notification"
            android:title="@string/enable_update_notifications"
            android:summary="@string/summary_notifications"
            android:icon="@drawable/ic_notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/title_calendar">

        <EditTextPreference
            android:key="section"
            app:title="@string/calendar_link"
            android:summary="@string/summary_link"
            android:icon="@drawable/ic_group"/>

    </PreferenceCategory>



</PreferenceScreen>